<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#000000"
    android:orientation="vertical" >

   <LinearLayout
       android:layout_width="fill_parent"
       android:layout_height="wrap_content" >
		
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_weight="1" >

	        <ImageButton
	            android:id="@+id/btnAlarm"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_gravity="top|center"
	            android:background="@drawable/button_style"
	            android:paddingBottom="20dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="0dp"
	            android:scaleType="center"
	            android:src="@drawable/alarm" />
	
	        <TextView
	            android:id="@+id/txtAlarm"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="bottom|center"
	            android:layout_marginBottom="4dp"
	            android:text="Alarm"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="#ffffff"
	            android:textSize="12sp" />

		</FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_weight="1" >

	        <ImageButton
	            android:id="@+id/btnClock"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_gravity="top|center"
	            android:background="@drawable/button_style"
	            android:paddingBottom="20dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="0dp"
	            android:scaleType="center"
	            android:src="@drawable/watch" />
	
	        <TextView
	            android:id="@+id/txtClock"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="bottom|center"
	            android:layout_marginBottom="4dp"
	            android:text="World clock"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="#ffffff"
	            android:textSize="12sp" />

		</FrameLayout>
		
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_weight="1" >

	        <ImageButton
	            android:id="@+id/btnWatch"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_gravity="top|center"
	            android:background="@drawable/button_style"
	            android:paddingBottom="20dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="0dp"
	            android:scaleType="center"
	            android:src="@drawable/clock" />
	
	        <TextView
	            android:id="@+id/txtWatch"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="bottom|center"
	            android:layout_marginBottom="4dp"
	            android:text="Stopwatch"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="#ffffff"
	            android:textSize="12sp" />

		</FrameLayout>
		
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="59dp"
            android:layout_weight="1" >

	        <ImageButton
	            android:id="@+id/btnTimer"
	            android:layout_width="fill_parent"
	            android:layout_height="fill_parent"
	            android:layout_gravity="top|center"
	            android:background="@drawable/button_style"
	            android:paddingBottom="20dp"
	            android:paddingLeft="10dp"
	            android:paddingRight="10dp"
	            android:paddingTop="0dp"
	            android:scaleType="center"
	            android:src="@drawable/timer" />
	
	        <TextView
	            android:id="@+id/txtTimer"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_gravity="bottom|center"
	            android:layout_marginBottom="4dp"
	            android:text="Timer"
	            android:textAppearance="?android:attr/textAppearanceSmall"
	            android:textColor="#ffffff"
	            android:textSize="12sp" />

		</FrameLayout>
    </LinearLayout>
	
   <FrameLayout
       android:layout_width="fill_parent"
       android:layout_height="119dp"
       android:layout_marginTop="5dp"
       android:background="@drawable/time_frame_style" >

	   <ImageView
	       android:id="@+id/imageView1"
	       android:layout_width="fill_parent"
	       android:layout_height="115dp"
	       android:scaleType="fitXY"
	       android:src="@drawable/time_frame" />
	
	   <TextView
	       android:id="@+id/txtZeroBig"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_gravity="bottom|left"
	       android:layout_marginBottom="29dp"
	       android:layout_marginLeft="30dp"
	       android:gravity="bottom"
	       android:includeFontPadding="false"
	       android:text="00:00:02"
	       android:textAppearance="?android:attr/textAppearanceLarge"
	       android:textColor="#ffffff"
	       android:textSize="80sp" />

	   <TextView
	       android:id="@+id/txtZeroSmall"
	       android:layout_width="wrap_content"
	       android:layout_height="wrap_content"
	       android:layout_gravity="bottom|right"
	       android:layout_marginBottom="29dp"
	       android:layout_marginRight="30dp"
	       android:gravity="bottom"
	       android:includeFontPadding="false"
	       android:text="01"
	       android:textAppearance="?android:attr/textAppearanceMedium"
	       android:textColor="#ffffff"
	       android:textSize="40sp" />

	</FrameLayout>

   <ImageView
       android:id="@+id/imageView2"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="75dp"
       android:src="@drawable/big_clock" />

   <TextView
       android:id="@+id/txtInstruction"
       android:layout_width="fill_parent"
       android:layout_height="wrap_content"
       android:layout_marginTop="20dp"
       android:gravity="center"
       android:text="After you tap Start, the Stopwatch will start"
       android:textAppearance="?android:attr/textAppearanceLarge"
       android:textColor="#ffffff"
       android:textSize="19sp" />
	
   <FrameLayout
       android:layout_width="fill_parent"
       android:layout_height="fill_parent"> 
	   <FrameLayout
	       android:layout_width="fill_parent"
	       android:layout_height="wrap_content"
	       android:layout_gravity="bottom" >
	
	       <ImageView
	           android:id="@+id/imageView3"
	           android:layout_width="fill_parent"
	           android:layout_height="74dp"
	           android:layout_gravity="center"
	           android:scaleType="fitXY"
	           android:src="@drawable/button_container" />
	
	       <ImageButton
	           android:id="@+id/btnStart"
	           android:layout_width="wrap_content"
	           android:layout_height="wrap_content"
	           android:layout_gravity="center"
	           android:background="@null"
	           android:scaleType="fitXY"
	           android:src="@drawable/button_start_style" />
		   
	 	</FrameLayout>
 	</FrameLayout>
</LinearLayout>