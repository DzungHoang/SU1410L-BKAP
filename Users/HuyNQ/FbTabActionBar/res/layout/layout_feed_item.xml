<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="16dp"
    android:layout_marginRight="16dp"
    android:background="@drawable/shape_feed_item_container"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <ImageView
            android:id="@+id/imgFeedTitle"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/profile" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="16dp"
            android:layout_weight="10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/txtFeedTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="King Leonidas"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="#000000"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1" >

                <TextView
                    android:id="@+id/txtFeedTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="24 minutes ago"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="#B6B8BB"
                    android:textSize="12sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:src="@drawable/notification" />

            </LinearLayout>

        </LinearLayout>

        <ImageButton
            android:id="@+id/btnFeedDown"
            android:layout_width="24dp"
            android:layout_height="20dp"
            android:layout_gravity="right|top"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:background="@null"
            android:padding="2dp"
            android:scaleType="fitCenter"
            android:src="@drawable/btn_down" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtFeedContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="16dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp"
        android:text="This is SPARTA !!!! This is SPARTA !!!! This is SPARTA !!!!"
        android:textColor="#1C1F25"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/imgFeedContent"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"
        android:src="@drawable/kitty" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp" >

        <TextView
            android:id="@+id/txtFeedLike"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10 likes"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/txtFeedComment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:text="3 comments"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:textSize="12sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:background="#D3D6DB"
        android:divider="@drawable/shape_feed_hor_linear_divider"
        android:orientation="horizontal"
        android:paddingTop="1dp"
        android:showDividers="middle" >

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/ImageButton01"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/select_feed_item_btn"
                android:padding="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/ImageView02"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="right|center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_comment" />

                <TextView
                    android:id="@+id/TextView02"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="Comment"
                    android:textColor="#585858"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/btnFeedLike"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/select_feed_item_btn"
                android:padding="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="right|center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_like" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="Like"
                    android:textColor="#585858"
                    android:textSize="12sp" />

            </LinearLayout>

        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="32dp"
            android:layout_weight="1" >

            <ImageButton
                android:id="@+id/btnFeedShare"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/select_feed_item_btn"
                android:padding="10dp"
                android:scaleType="fitCenter" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center" >

                <ImageView
                    android:id="@+id/ImageView01"
                    android:layout_width="12dp"
                    android:layout_height="12dp"
                    android:layout_gravity="right|center_vertical"
                    android:scaleType="fitCenter"
                    android:src="@drawable/btn_share" />

                <TextView
                    android:id="@+id/TextView01"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="left|center_vertical"
                    android:layout_marginLeft="4dp"
                    android:text="Share"
                    android:textColor="#585858"
                    android:textSize="12sp" />
            </LinearLayout>
        </FrameLayout>

    </LinearLayout>

</LinearLayout>