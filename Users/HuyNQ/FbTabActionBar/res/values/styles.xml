<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="Theme.AppCompat.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>
    
    <style name="HuyTheme" parent="Theme.AppCompat.Light">
		<!--<item name="android:actionBarTabStyle">@style/HuyTheme.ActionBar.Tab</item>-->
           
        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/HuyTheme.ActionBar</item>
        <item name="actionBarTabStyle">@style/HuyTheme.ActionBar.Tab</item>
        <item name="actionBarTabTextStyle">@style/HuyTheme.ActionBar.TabText</item>
        <item name="actionBarDivider">@color/white</item>
        <item name="actionBarSize">50dp</item>
    </style>
    
    <style name="HuyTheme.ActionBar.Tab">
        <item name="android:background">@drawable/tab_bar_background</item>
        <item name="android:height">50dp</item>
        <item name="android:gravity">center</item>
    </style>
    
    <style name="HuyTheme.ActionBar.TabText">
        <item name="android:textColor">@color/tab_text_color</item>
    </style>
    
    <style name="HuyTheme.ActionBar"  parent="@style/Widget.AppCompat.ActionBar">
        <item name="titleTextStyle">@style/HuyTheme.ActionBar.TitleText</item>
        <item name="background">@drawable/bar_background</item>
        <item name="backgroundStacked">@drawable/bar_background</item>
        <item name="backgroundSplit">@drawable/bar_background</item>
        <item name="android:height">60dp</item>
    </style>
    
    <style name="HuyTheme.ActionBar.TitleText">
        <item name="android:textColor">@color/title_text_color</item>
    </style>

</resources>
